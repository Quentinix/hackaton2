{% extends 'base.html.twig' %}

{% block body %}
    <h1>Enfant</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ enfant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ enfant.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ enfant.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ enfant.age }}</td>
            </tr>
            <tr>
                <th>Numerovoie</th>
                <td>{{ enfant.numeroVoie }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ enfant.rue }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ enfant.codePostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ enfant.ville }}</td>
            </tr>
            <tr>
                <th>Lettre</th>
                <td>{{ enfant.lettre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('enfants_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('enfants_edit', { 'id': enfant.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
